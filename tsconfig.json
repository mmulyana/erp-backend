{
  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.mjs",
    "src/modules/dashboard",
    "src/modules/helpdesk",
    "src/modules/hris",
    "src/modules/inventory",
    "src/modules/permission",
    "src/modules/project"
  ],
  "ts-node": {
    "files": true
  }
}
